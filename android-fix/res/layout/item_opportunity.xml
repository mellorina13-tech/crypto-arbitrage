<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#1e1e3f"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Coin Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/coinName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bitcoin"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/coinSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(BTC)"
                        android:textColor="#a0a0a0"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/coinRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textColor="#a0a0a0"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/coinPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$65,432.00"
                        android:textColor="#00d2ff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/priceChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2.5%"
                        android:textColor="#4caf50"
                        android:textSize="12sp"
                        android:padding="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cap: "
                        android:textColor="#666666"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/marketCap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1.2T"
                        android:textColor="#a0a0a0"
                        android:textSize="11sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vol: "
                        android:textColor="#666666"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$45.2B"
                        android:textColor="#a0a0a0"
                        android:textSize="11sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Net Spread -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/netSpread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2.5%"
                    android:textColor="#4caf50"
                    android:textStyle="bold"
                    android:textSize="28sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Profit"
                    android:textColor="#a0a0a0"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Exchange Comparison -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0f3460"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <!-- Buy Exchange -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/buyExchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Binance"
                    android:textColor="#00d2ff"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/buyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$65,418.20"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUY"
                    android:background="#4caf50"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Arrow -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="#00d2ff"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:paddingHorizontal="12dp"/>

            <!-- Sell Exchange -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/sellExchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OKX"
                    android:textColor="#00d2ff"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/sellPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$65,435.50"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELL"
                    android:background="#f44336"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Profit Breakdown -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:layout_marginTop="8dp"
            android:background="#00000040"
            android:padding="8dp">

            <!-- Profit 1K -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit on $1K"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/profit1k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$25.00"
                    android:textColor="#4caf50"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Profit 5K -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit on $5K"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/profit5k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$125.00"
                    android:textColor="#4caf50"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Gross Spread -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gross Spread"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/grossSpread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.8%"
                    android:textColor="#4caf50"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Total Fees -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Fees"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/totalFees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.3%"
                    android:textColor="#ff9800"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Confidence -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confidence"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/confidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textColor="#4caf50"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Estimated Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Est. Time"
                    android:textColor="#a0a0a0"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/estimatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5min"
                    android:textColor="#00d2ff"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>
        </GridLayout>

        <!-- Warning -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Verify prices on exchanges before trading"
            android:textColor="#ff9800"
            android:textSize="11sp"
            android:background="#ff980020"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
